{{ 'component-blog-list-item.css' | asset_url | stylesheet_tag }}

<li class="blog-list__item is-{{ blog_handle }}">
  <a href="{{ article.url }}" class="blog-list__link">
    <div class="blog-list__img">
      {% if article.image != blank %}
        {% comment %} サムネイル画像が登録されていたらサムネイルを表示 {% endcomment %}
        <img src="{{ article.image.src | image_url: width: 600 }}" width="600" height="600" alt="" loading="lazy">
      {% else %}
        {% comment %} サムネイル画像が登録されていなかったらasset内に格納した'default.jpg'を表示 {% endcomment %}
        <img src="{{ 'img_blog_default.png' | asset_img_url: 'original' }}" width="600" height="600" alt="" loading="lazy">
      {% endif %}
    </div>
    <div class="blog-list__text">
      <div class="blog-list__tags">
        {% comment %} workshop {% endcomment %}
        {% if article.tags contains 'workshop' %}
          <span class="blog-list__tag is-red"></span>
        {% endif %}
        {% if article.tags contains 'event' %}
          <span class="blog-list__tag is-green"></span>
        {% endif %}
        {% if article.tags contains 'class' %}
          <span class="blog-list__tag is-yellow"></span>
        {% endif %}
        {% if article.tags contains 'news' %}
          <span class="blog-list__tag is-gray"></span>
        {% endif %}

        {% comment %} articles {% endcomment %}
        {% if article.tags contains 'letterpress' %}
          <span class="blog-list__tag is-gold"></span>
        {% endif %}
        {% if article.tags contains 'risograph' %}
          <span class="blog-list__tag is-pink"></span>
        {% endif %}
        {% if article.tags contains 'paper' %}
          <span class="blog-list__tag is-lightgray"></span>
        {% endif %}
        {% if article.tags contains 'other' %}
          <span class="blog-list__tag is-darkgray"></span>
        {% endif %}
      </div>
      <div class="blog-list__date">
        {% comment %} ブログの更新日を表示 {% endcomment %}
        <time datetime="{{ article.updated_at | date: '%Y-%m-%d' }}">{{ article.updated_at | date: '%Y-%m-%d' }}</time>
      </div>
      <p class="blog-list__title">
        {% comment %} ブログのタイトルを表示 {% endcomment %}
        {{ article.title }}
      </p>
      <div class="blog-list__content">
        {{ article.content | strip_html | truncate: 80 }}
      </div>
    </div>
  </a>
</li>
